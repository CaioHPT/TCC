                <ul class="nav navbar-nav mr-auto" >
                    <li class="nav-item">
                        <a class="nav-link" href="/">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/catalogo">Catalogo</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/login">Conta</a>
                    </li>
                </ul>
                <% if (user == null || user == undefined || user == '') { %>
                    <ul class="navbar-nav ml-auto">
                        <li class="nav-item">
